<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/judul"
        android:text="Kalkulator Sederhana Part 1 "
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/judul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/angkasatu"
        android:hint="Masukkan angka pertama"
        android:textSize="15dp" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/angkasatu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/angkadua"
        android:hint="Masukkan angka kedua"
        android:textSize="15dp" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/angkadua"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/angkatiga"
        android:hint="Masukkan angka ketiga"
        android:textSize="15dp" />
    <Button
        android:id="@+id/btntambah"
        android:text="+"
        android:layout_below="@id/angkatiga"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnkurang"
        android:text="-"
        android:layout_below="@id/angkatiga"
        android:layout_toRightOf="@id/btntambah"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnkali"
        android:text="x"
        android:layout_below="@id/angkatiga"
        android:layout_toRightOf="@id/btnkurang"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnbagi"
        android:text="/"
        android:layout_below="@id/angkatiga"
        android:layout_toRightOf="@id/btnkali"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="HASIl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hasil"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="24dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/btnkurang"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/hasil1"
        android:textSize="20dp"
        android:layout_below="@id/hasil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/ch1"
        android:layout_below="@id/judul"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/ch2"
        android:layout_below="@id/angkasatu"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/ch3"
        android:layout_below="@id/angkadua"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>